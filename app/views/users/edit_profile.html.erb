<div class="edit-profile col-md-12">

<% if current_user.sign_in_count > 1 %>
<h2 class="text-center">Modify your profile </h2>
<!-- Total Visits:  %= current_user.sign_in_count %> -->
<% else %>
<h2>Complete your profile </h2>
<% end %>

<%= form_for(@user, url: '/update_profile', html: { method: :put }) do |f| %>

<div class="form-inline">
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="form-group">
    <img class="profile-img" src=<%= @user.profile_picture_url %> ><br>
    <%= f.label :profile_picture_url, "Update profile image URL" %>
    <%= f.text_field :profile_picture_url, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :bio %> <br>
    <%= f.text_area :bio, size: "25x5", :class => "bio-input", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :gender %>
    <%= f.text_field :gender, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

</div>
<% end %>
</div>

