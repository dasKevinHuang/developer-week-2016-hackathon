
<div class="edit-profile col-md-12">

<% if current_user.sign_in_count > 1 %>
<h2 class="text-center">Modify your profile </h2>
<!-- Total Visits:  %= current_user.sign_in_count %> -->
<% else %>
<h2>First finish your profile </h2>
<% end %>

<%= form_for(@user, url: '/finish_profile', html: { method: :put }) do |f| %>

  <div class="form-group">
    <%= f.label :profile_picture_url, "Profile Photo" %>
    <img class="profile-img" src=<%= @user.profile_picture_url %> ><br>
  </div>
  <div class="form-group">
    <%= f.label :bio, "Create a Brief Bio" %> <br>
    <%= f.text_area :bio, size: "25x5", :class => "bio-input", autofocus: true %>
  </div>

  <div class="actions center">
    <%= f.submit "Start Swiping", :class=>"btn btn-success btn-lg" %>
  </div>

</div>
<% end %>
</div>

